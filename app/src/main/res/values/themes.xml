<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MP3App" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="text_app" parent="Widget.MaterialComponents.TextView">
        <item name="android:color">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="btn_music" parent="Widget.AppCompat.ImageButton">
        <item name="android:width">50dp</item>
        <item name="android:height">50dp</item>
    </style>
</resources>