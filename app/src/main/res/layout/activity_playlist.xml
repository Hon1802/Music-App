<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SongsFragment"
    android:id="@+id/fragment_song"
    android:scrollbars="vertical"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_song_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/img_add_song_to_playlist"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/rv_song_playlist"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="42dp"
            android:layout_marginRight="50dp"
            android:background="@color/white"
            android:src="@drawable/plus" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/img_add_song_to_playlist"/>
    </RelativeLayout>
</ScrollView>
